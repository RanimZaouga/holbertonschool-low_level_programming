# Compiler options
CC = gcc
CFLAGS = 

# Source files
SRCS = main.c

# Object files
OBJS = $(SRCS:.c=.o)

# Target executable
TARGET = school

# Default target
all: $(TARGET)

# Rule for building the executable
$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) -o $@ $^

# Rule for compiling source files
%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

# Clean target
clean:
	rm -f $(OBJS) $(TARGET)


